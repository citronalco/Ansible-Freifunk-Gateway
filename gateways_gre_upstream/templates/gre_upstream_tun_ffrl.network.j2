# {{ ansible_managed }}

[Match]
Name=tun-ffrl-{{ item.name }}

[Network]
Address={{ (item.v4_remote | ipaddr( item.v4_remote.split('.')[3] | int + 1) | ipaddr('address') + '/' + item.v4_remote | ipaddr('netmask')) | ipaddr('prefix') }}
Address={{ item.v6_remote | next_nth_usable(1) }}/{{ item.v6_remote | ipaddr('prefix') }}

[RoutingPolicyRule]
IncomingInterface=tun-ffrl-{{ item.name }}
Table=ffnet
